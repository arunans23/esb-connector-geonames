<component name="geonames-weather" type="synapse/template">
    <subComponents>
        <component name="listRecentEarthquakes">
            <file>listRecentEarthquakes.xml</file>
            <description>Returns a list of earthquakes, ordered by magnitude.</description>
        </component>
        <component name="listWeatherStations">
            <file>listWeatherStations.xml</file>
            <description>Returns a list of weather stations with the most recent weather observation.</description>
        </component>
        <component name="getWeatherStationWithObservation">
            <file>getWeatherStationWithObservation.xml</file>
            <description>Returns a weather station with the most recent weather observation.</description>
        </component>
    </subComponents>
</component>